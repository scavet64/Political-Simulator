<Page x:Class="PoliticalSimulatorGUI.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PoliticalSimulatorGUI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage"
      Background="#0A1128">
    <Page.Resources>

        

    </Page.Resources>

    <Border>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label HorizontalAlignment="Center" Foreground="#FFFFFF">
                Please enter your profile name
            </Label>
            <TextBox x:Name="ProfileNameBox" Margin="4" Background="#001F54" BorderThickness="0" Style="{DynamicResource TextBoxCustomStyle}"/>
            <StackPanel Margin="50, 10" Width="100">
                <Button Margin="0,5,0,2.5" Click="LoginClick" Style="{DynamicResource CustomButtonStyle}">Login</Button>
                <Button Margin="0,2.5,0,5" Click="CreateProfileClick" Style="{DynamicResource CustomButtonStyle}" >Create Profile</Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Page>
