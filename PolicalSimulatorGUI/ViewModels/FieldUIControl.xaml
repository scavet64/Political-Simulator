        <!--<Image x:Name="tmp" Source="..\Images\FieldImages\brianpepsfield.png" MouseDown="Image_MouseDown" MouseEnter="Imageimage_MouseEnter" MouseLeave="Imageimage_MouseLeave" />-->
        <TextBlock Text="{Binding Path=PlayFatigueValue}" Foreground="White" FontFamily="./#OPTIBelwe" FontSize="18" TextAlignment="Center" Margin="10,23,232,216" />
        <TextBlock Text="{Binding Path=ChanceToHit}" Foreground="White" FontFamily="./#OPTIBelwe" FontSize="18" TextAlignment="Center" Margin="233,10,10,228" />
        <TextBlock Text="{Binding Path=AttackValue}" Foreground="White" FontFamily="./#OPTIBelwe" FontSize="18" TextAlignment="Center" Margin="20,233,232,25" />
        <TextBlock Text="{Binding Path=HealthValue}" Foreground="White" FontFamily="./#OPTIBelwe" FontSize="18" TextAlignment="Center" Margin="233,233,15,14" />
