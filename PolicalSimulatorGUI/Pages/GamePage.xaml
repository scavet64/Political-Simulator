<Page x:Class="PoliticalSimulatorGUI.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PoliticalSimulatorGUI"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="GamePage"
      Background="{StaticResource MajorBackground}">

    <Grid>
        <StackPanel x:Name="topStack" VerticalAlignment="Top" Height="300" HorizontalAlignment="Center" />
        <Grid x:Name="FieldGrid" Margin="0,300,200,300" DragEnter="FieldGrid_DragEnter" Background="Transparent" DragDrop.Drop="FieldGrid_DragEnter" AllowDrop="True">
            <StackPanel VerticalAlignment="Top" Height="240" HorizontalAlignment="Center" Orientation="Horizontal"/>
            <StackPanel x:Name="Player1Field" VerticalAlignment="Bottom" Height="240" HorizontalAlignment="Center" Orientation="Horizontal" />
        </Grid>
        <StackPanel x:Name="BottomStack" VerticalAlignment="Bottom" Height="300" HorizontalAlignment="Center" Orientation="Horizontal" />
    </Grid>
</Page>
